{%- if section.settings.show_announcement -%}
  <section>
    <div class="announcement-bar">
      <a href="/">
        <div class="announcement-bar-left-section">
          {%- if section.settings.image != blank -%}
            <img
              width="35"
              height="35"
              loading="lazy"
              src="{{ section.settings.image | image_url }}"
            >
          {%- else -%}
            <img
              width="auto"
              height="50"
              loading="lazy"
              src="{{ 'store-logo.png' | asset_url }}"
            >
          {%- endif -%}
        </div>
      </a>
      <div class="announcement-bar-right-section">
        <ul>
          {%- if section.blocks.size == 0 -%}
            <li>
              <a href="#">Help</a>
            </li>

            {% if shop.customer_accounts_enabled %}
              {% if customer %}
                <li>
                  <a href="/account">Account</a>
                </li>

              {% else %}
                <li>
                  <a href="/account/login">Sign in</a>
                </li>
              {% endif %}
            {% endif %}

          {%- else -%}
            {% for block in section.blocks %}
              <li>
                <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
              </li>
            {% endfor %}
          {%- endif -%}
        </ul>
      </div>
    </div>
  </section>

  <style>
    .announcement-bar {
      background: {{ section.settings.background }}
      ;
      color: {{ section.settings.text_color }}
      ;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 30px;
      margin: 0 auto;
      max-width: 1200px;
    }

    .announcement-bar ul {
      display: flex;
      gap: 10px;
      list-style-type: none;
    }

    .announcement-bar ul a {
      text-decoration: none;
      color: #a52f4c;
      font-weight: bold;
    }

    .announcement-bar ul a:hover {
      text-decoration: underline;
    }
  </style>

  <script></script>
{%- endif -%}

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Store Logo",
      "info": "400 x 120px .png recommended"
    },
    {
      "type": "color",
      "id": "background", 
      "label": "Background",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "name": "Links",
      "type": "links",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ]
}
{% endschema %}