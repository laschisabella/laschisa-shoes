<footer class="footer-main">
  <div class="footer-sec-1">
    {%- if section.blocks.size == 0 -%}
      <div>
        <p>Guides</p>
        <p>Terms of Sale</p>
        <p>Terms of Use</p>
        <p>Privacy Policy</p> 
      </div>
    {% else %}
      {% for block in section.blocks %}
        <div>
          <li>
            <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
          </li>
          <li>
            <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
          </li>
          <li>
            <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
          </li>
          <li>
            <a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a>
          </li>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</footer>

<style>
  .footer-main {
    background: {{ section.settings.background }};
    color: {{ section.settings.text_color }};
    padding: 10px;

    }
  .footer-sec-1 {
    margin-top: 20px;
    display: flex;
    justify-content: space-around;
  }

  .footer-sec-1 div{
    display: flex;
    gap: 20px;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#F4F4F4"
    }
  ],
  "blocks": [
    {
      "name": "Links",
      "type": "links",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "footer"
    }
  ]
}
{% endschema %}