<footer>
  <ul>
    {% for link in linklists['footer'].links -%}
      <li>{{ link.title | link_to: link.url }}</li>
    {%- endfor %}
  </ul>
</footer>

<style>
  footer {
    background-color: {{ section.settings.background-color }};
    padding: 5px 20px;
    margin: 10px 0; 
    border-radius: 12px;
    display: flex;
    justify-content: center;
  }
  
  footer ul{
    display: flex;
    gap: 10px;
    list-style: none;
  }

  footer ul a {
    color: {{ section.settings.text-color }};
    text-decoration: none;
    font-weight: bold;
    transition: all 0.2s ease;
  }

  footer ul a:hover {
    opacity: 0.5;
  }

</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "background-color",
      "label": "Background",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "text-color",
      "label": "Menu Color",
      "default": "#fff"
    }
  ],
  "blocks": [
    {
      "name": "Links",
      "type": "links",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "footer"
    }
  ]
}
{% endschema %}